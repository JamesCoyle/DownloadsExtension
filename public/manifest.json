{
	"manifest_version": 3,
	"name": "Download Manager",
	"short_name": "Downloads",
	"version": "2.3.0",
	"author": "James Coyle",
	"description": "A less intrusive way to access your recent downloads",
	"icons": {
		"128": "images/download128.png",
		"16": "images/download16.png",
		"32": "images/download32.png",
		"48": "images/download48.png",
		"64": "images/download64.png"
	},
	"permissions": [
		"downloads",
		"downloads.open",
		"downloads.shelf",
		"storage"
	],
	"optional_permissions": [
		"notifications"
	],
	"action": {
		"default_popup": "index.html",
		"default_title": "Downloads",
		"default_icon": {
			"16": "icons/default/icon-16.png",
			"24": "icons/default/icon-24.png",
			"32": "icons/default/icon-32.png",
			"48": "icons/default/icon-48.png"
		}
	},
	"background": {
		"service_worker": "background.js"
	}
}